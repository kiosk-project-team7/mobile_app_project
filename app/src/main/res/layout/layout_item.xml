<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.example.kioskui.Itemview" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <!--위쪽레이아웃-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buger_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_launcher_background" />
            <!--토핑 음료 사이드메뉴 카테고리 레이아웃-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="토핑"
                    android:textSize="10dp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="음료"
                    android:textSize="10dp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="사이드메뉴"
                    android:textSize="10dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- 상세 리스트 레이아웃 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/toping_list"
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="토핑 리스트"
                        android:textSize="10dp"
                        android:textColor="#000000" />
                    <ImageView
                        android:id="@+id/all_delete"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/x"
                        android:layout_gravity="end"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/drink_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="음료 리스트"
                    android:textSize="10dp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/sidemenu_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="사이드메뉴 리스트"
                    android:textSize="10dp"
                    android:textColor="#000000" />

            </LinearLayout>
        </LinearLayout>
        <!--아래쪽 레이아웃-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">
            <!--수량 버튼-->

            <ImageView
                android:id="@+id/minus"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/btn_minus" />

            <TextView
                android:id="@+id/menu_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:gravity="center_vertical"
                android:textSize="10dp"
                android:text="수량"
                android:textAlignment="center"
                android:textColor="#000000"
                />

            <!--메뉴 이름-->
            <ImageView
                android:id="@+id/plus"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/btn_plus" />

            <TextView
                android:id="@+id/step_menu_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:textSize="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="#000000" />
        </LinearLayout>

    </LinearLayout>
</layout>