<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- id
    왼쪽 메뉴바 레이아웃 - menubar_layout
    세트 - set_btn
    단품 - single_btn
    사이드 - side_btn
    음료 - drink_btn
    -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menubar_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:src="@drawable/logo_burgerking"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/set_btn"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_marginTop="100dp"
            android:text="세트"
            android:textSize="22dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/single_btn"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:text="단품"
            android:textSize="22dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/set_btn" />

        <Button
            android:id="@+id/side_btn"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:text="사이드"
            android:textSize="22dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/single_btn" />

        <Button
            android:id="@+id/drink_btn"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:text="음료"
            android:textSize="22dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/side_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--
    단계별 선택
    수정 단계
    -->

    <LinearLayout
        android:id="@+id/step_layout"
        android:layout_width="400dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toEndOf="@id/menubar_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/menu_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="단계1"
                android:textSize="10sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="단계2"
                android:textSize="10sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="단계3"
                android:textSize="10sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="단계4"
                android:textSize="10sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="단계5"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <!--
    프래그먼트 메뉴 화면 id
    레이아웃 - menu_layout
    프래그먼트 - main_fragment
    -->

    <HorizontalScrollView
        android:id="@+id/menu_layout"
        android:layout_width="400dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/menubar_layout"
        app:layout_constraintTop_toBottomOf="@id/step_layout">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/main_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/nav_menu" />
    </HorizontalScrollView>

    <!-- 오른쪽화면-->
    <!--
    뒤로가기 - back_btn
    주문 - order_btn
    -->

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/step_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">
        <!-- 주문 목록-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/step_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            />
        <!--버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/order_btn"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="주문"
                android:textSize="22dp"
                android:background="#B4A6AB"
                />
            <Button
                android:id="@+id/back_btn"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="이전"
                android:textSize="22dp"
                android:background="#B3B4A6AB"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>