<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.example.kioskui.model.OrderViewModel" />
        <variable
            name="Menufragment"
            type="com.example.kioskui.MenuFragment" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/side"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:text="사이드 메뉴"
                    android:textColor="@color/white"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/menu1img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/side_01_21cm_cheesestick"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp" />

                    <ImageView
                        android:id="@+id/menu2img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/side_02_angry_nugget_king_8"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp" />

                    <ImageView
                        android:id="@+id/menu3img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/side_03_basak_king"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp" />

                    <ImageView
                        android:id="@+id/menu4img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/side_04_cheese_fries"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cheese_stick"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{() -> viewModel.set_side(@string/next)}"
                        android:text="치즈스틱" />

                    <CheckBox
                        android:id="@+id/nuget"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{() -> viewModel.set_side(@string/next)}"
                        android:text="치킨너겟" />

                    <CheckBox
                        android:id="@+id/chicken"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{() -> viewModel.set_side(@string/next)}"
                        android:text="바삭킹" />

                    <CheckBox
                        android:id="@+id/cheese_potato"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{() -> viewModel.set_side(@string/next)}"
                        android:text="치즈감자" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/menu7img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/side_07_corn_salad"
                        android:layout_marginTop="40dp" />

                    <ImageView
                        android:id="@+id/menu8img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/side_08_creamy_mozzaball"
                        android:layout_marginTop="40dp" />

                    <ImageView
                        android:id="@+id/menu9img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/side_09_french_fries_l"
                        android:layout_marginTop="40dp" />

                    <ImageView
                        android:id="@+id/menu10img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/side_10_french_fries_r"
                        android:layout_marginTop="40dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/salad"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{() -> viewModel.set_side(@string/next)}"
                        android:text="코올슬로" />

                    <CheckBox
                        android:id="@+id/ball"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{() -> viewModel.set_side(@string/next)}"
                        android:text="치즈볼" />

                    <CheckBox
                        android:id="@+id/potato_L"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{() -> viewModel.set_side(@string/next)}"
                        android:text="감자튀김(L)" />

                    <CheckBox
                        android:id="@+id/potato_R"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{() -> viewModel.set_side(@string/next)}"
                        android:text="감자튀김(R)" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
