<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FF0000">

    <data>
        <variable
            name="viewModel"
            type="com.example.kioskui.model.OrderViewModel" />
        <variable
            name="Menufragment"
            type="com.example.kioskui.MenuFragment" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/side"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:text="사이드 메뉴"
                    android:textColor="@color/white"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/menu1img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/side_01_21cm_cheesestick"

                        />

                    <ImageView
                        android:id="@+id/menu2img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/side_02_angry_nugget_king_8"

                        />

                    <ImageView
                        android:id="@+id/menu3img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/side_03_basak_king"

                         />

                    <ImageView
                        android:id="@+id/menu4img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/side_04_cheese_fries"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:id="@+id/srdg1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/srb1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{() -> viewModel.set_side(@string/next)}"
                        android:text="치즈스틱"

                        />

                    <RadioButton
                        android:id="@+id/srbw"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{() -> viewModel.set_side(@string/next)}"
                        android:text="치킨너겟" />

                    <RadioButton
                        android:id="@+id/srb3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{() -> viewModel.set_side(@string/next)}"
                        android:text="바삭킹" />

                    <RadioButton
                        android:id="@+id/srb4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{() -> viewModel.set_side(@string/next)}"
                        android:text="치즈감자" />
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/menu7img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/side_07_corn_salad"
                         />

                    <ImageView
                        android:id="@+id/menu8img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/side_08_creamy_mozzaball"
                         />

                    <ImageView
                        android:id="@+id/menu9img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/side_09_french_fries_l"
                         />

                    <ImageView
                        android:id="@+id/menu10img"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/side_10_french_fries_r"
                         />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                    <RadioGroup
                        android:id="@+id/srdg2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/srb5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:onClick="@{() -> viewModel.set_side(@string/next)}"
                            android:text="코올슬로" />

                        <RadioButton
                            android:id="@+id/srb6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:onClick="@{() -> viewModel.set_side(@string/next)}"
                            android:text="치즈볼" />

                        <RadioButton
                            android:id="@+id/srb7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:onClick="@{() -> viewModel.set_side(@string/next)}"
                            android:text="감자튀김(L)" />

                    <RadioButton
                        android:id="@+id/srb8"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:onClick="@{() -> viewModel.set_side(@string/next)}"
                        android:text="감자튀김(R)" />
                    </RadioGroup>
                </LinearLayout>
                <TextView
                    android:id="@+id/drink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:text="음료"
                    android:textColor="@color/white"
                    android:gravity="center" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/drink_01_americano_ice"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/drink_02_americano"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:src="@drawable/drink_03_coke_l"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/drink_04_coke_r"
                        android:layout_weight="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    >
                    <RadioGroup
                        android:id="@+id/drdg1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        >
                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="홍차"
                            android:id="@+id/drk1"
                            android:layout_weight="1"
                            />
                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/drk2"
                            android:text="커피"
                            />
                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/drk3"
                            android:text="콜라(R)"
                            />
                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@+id/drk4"
                            android:text="콜라(L)"
                        />
                    </RadioGroup>
                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="horizontal"
                        >
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/drink_05_coke_zero_l"
                            />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/drink_06_coke_zero_r"
                            />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/drink_07_minutemaid_orange"
                            />
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/drink_08_seagram_l"
                            />
                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >
                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/drdg2"
                        >
                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/drk5"
                            android:layout_weight="1"
                            android:text="제로콜라(R)"/>
                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/drk6"
                            android:layout_weight="1"
                            android:text="제로콜라(L)"/>
                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/drk7"
                            android:layout_weight="1"
                            android:text="오렌지주스"/>
                        <RadioButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/drk8"
                            android:layout_weight="1"
                            android:text="시그램"/>
                    </RadioGroup>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:text="토핑"
                    android:textColor="@color/white"
                    android:gravity="center" />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</layout>
