<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--
    직접선택(커스터마이징) 버튼 - cus_btn
    추천 버튼 - rec_btn
    -->

    <ImageView
        android:id="@+id/menu_img"
        android:layout_width="129dp"
        android:layout_height="116dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/menu_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="메뉴 설명"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_img" />

    <Button
        android:id="@+id/cus_btn"
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:layout_marginTop="100dp"
        android:text="직접선택"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rec_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_img" />

    <Button
        android:id="@+id/rec_btn"
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:text="추천"
        android:textSize="40dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cus_btn"
        app:layout_constraintTop_toBottomOf="@+id/menu_img" />

</androidx.constraintlayout.widget.ConstraintLayout>